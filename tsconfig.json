{
  "compilerOptions": {
    "module": "ESNext",        // Use ES module syntax for imports/exports
    "target": "ES6",           // Specify the JavaScript version (ES6 or later)
    "moduleResolution": "node",// Resolve modules like Node.js
    "outDir": "./dist",        // Specify the output directory for compiled files
    "esModuleInterop": true,   // Enable compatibility for commonjs and ES module interop
    "skipLibCheck": true,      // Skip type checking of all declaration files
    "strict": true             // Enable all strict type-checking options
  },
  "include": [
    "src/**/*.ts"              // Include all TypeScript files in the 'src' directory
  ]
}
